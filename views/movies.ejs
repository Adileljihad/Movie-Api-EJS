<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/css/style.css" />
        <title>Movies</title>
    </head>
    <body>
        <%- include('./includes/nav.ejs') %>
        <header>
            <h1>Movies</h1>
            <main>
                <% movies.forEach((movie) => {%>

                <div>
                    <h2><%= movie.title%></h2>
                    <img src="<%= movie.logo %>" alt="<%= movie.title %>" />
                    <p><%= movie.director %></p>
                    <p><%= movie.year %></p>
                    <a href="/api/get/<%= movie.id %>">Click Here</a>
                </div>

            <div>     
                 <form action="/api/delete/<%= movie.id%>" method="DELETE"></form>
                <button type="submit">Delete</button>
            </div>
           

                <% }); %>
            </main>
        </header>
    </body>
</html>
